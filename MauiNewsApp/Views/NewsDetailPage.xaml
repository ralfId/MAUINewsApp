<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MauiNewsApp.Views.NewsDetailPage"
             xmlns:vm="clr-namespace:MauiNewsApp.ViewModels"
             Title="NewsDetailPage"
             x:DataType="vm:NewsDetailPageVM" BackgroundColor="Blue">
    <ScrollView>
        <Grid RowDefinitions="400, 30, *">
            <Image Grid.RowSpan="2" Aspect="AspectFill" Source="{Binding Article.image}"  />
            <Grid>

                <Label Text="{Binding Article.title}" VerticalOptions="End"/>
            </Grid>

            <Grid Grid.Row="1" Grid.RowSpan="2" BackgroundColor="Red" VerticalOptions="FillAndExpand">
                
                 

            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
